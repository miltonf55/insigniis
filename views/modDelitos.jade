extends ./menuAd.jade
block main
    main
        h1 Modificar Usuarios
        table(class="table table-striped")
            thead
                tr
                    th(scope="col")
                        |ID
                    th(scope="col")
                        |Tipo de Delito
                    th(scope="col")
                        |Editar
            tbody
                each val, index in usu
                    tr
                        form(action="/editarUsu", method="post")
                            th(scope="col")
                                input(type="text", class="form-control widthID", placeholder="ID", value=id[index], name="id", readonly="readonly")
                            th(scope="col")
                                input(type="text", class="form-control widthUS", placeholder="Usuario", value=val, name="usu", required)
                            th(scope="col", class="rowIMG widthEdit")
                                button(type="submit" class="btn btn-outline-warning")
                                    |Editar
                                    
        